<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_splash_hen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hen"
        android:layout_marginTop="120dp"
        />


    <ImageView
        android:id="@+id/img_splash_pfwas"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pfwas_logo"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/img_splash_hen"/>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gallilnalogo"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/img_splash_pfwas"/>

</RelativeLayout>